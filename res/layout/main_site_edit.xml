<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:id="@+id/site_edit_dialog">
    
	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
	    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="名称：" />
	    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/txtName" android:minWidth="100dip"/>
	</LinearLayout>
	
	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
	    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="网址" />
	    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/txtUrl" android:minWidth="100dip"/>
	</LinearLayout>
	
</LinearLayout>