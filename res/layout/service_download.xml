    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/txtTitle" />
    
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal">
	     <ProgressBar android:layout_width="match_parent" android:layout_height="wrap_content" style="?android:attr/progressBarStyleHorizontal"
	        android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:id="@+id/progressBar" />
    </LinearLayout>
</LinearLayout>